<%= form_for @user do |f| %>
  <fieldset>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Register" %>
  </fieldset>
<% end %>

<ul class="form-errors">
  <% if @errors %>
    <% @errors.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  <% end %>
</ul>
