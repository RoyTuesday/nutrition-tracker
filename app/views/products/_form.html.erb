<%= form_for product do |f| %>
  <fieldset>
    <input name="product[name]" type="hidden" value="<%= name %>"/>
    <input name="product[category]" type="hidden" value="<%= category %>"/>
    <input name="product[ndb_no]" type="hidden" value="<%= ndb_no %>"/>

    <%= f.label :serving_size %>
    <%= f.number_field :serving_size %>

    <%= f.label :serving_unit %>
    <%= f.text_field :serving_unit %>

    <%= f.submit "Add new food item" %>
  </fieldset>
<% end %>
