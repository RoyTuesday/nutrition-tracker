<div id="usda-new-product-container">
</div>

<div id="products-container">
  <h2 class="mb-none">
    Products in Database
  </h2>
  <div>
    <%= render partial: 'search' %>
  </div>

  <% if @products %>
    <ul id="products-list">
      <% @products.each do |product| %>
        <li>
          <%= render partial: 'product', locals: {product: product} %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>
      No products yet stored!
    </p>
  <% end %>
</div>

<div id="usda-ndb-search-container">
  <% if current_user %>
    <%= render partial: "usda_ndb_search" %>
  <% else %>
    <p>
      Please log in to add products to the database
    </p>
  <% end %>
</div>
