<h3>
  Log in
</h3>
<%= form_tag sessions_path id: 'login-form' do %>
  <fieldset>
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, placeholder: "email@example.com" %>

    <%= label_tag :password %>
    <%= password_field_tag :password, nil, placeholder: "password123" %>

    <%= submit_tag 'Log in' %>
  </fieldset>
<% end %>

<ul class="form-errors">
  <% if @errors %>
    <% @errors.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  <% end %>
</ul>
